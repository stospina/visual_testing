{
  "compilerOptions": {
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "commonjs",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@shared/*": ["shared/*"],
      "@web-api/*": ["web-api-tests/*"],
      "@reports/*": ["reports/*"],
      "@web-client/*": ["web-client-tests/*"],
      "@root/*": ["./*"]
    }
  },
  "exclude": ["./node_modules/"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
